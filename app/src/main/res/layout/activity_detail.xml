<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <RelativeLayout
            android:id="@+id/id_block"
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_box"
            android:layout_below="@+id/image"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/block"
                android:layout_width="@dimen/content_box"
                android:layout_height="@dimen/content_box"
                android:background="@android:color/black"
                android:scaleType="centerInside"
                android:src="@drawable/id" />

            <TextView
                android:id="@+id/conten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginTop="@dimen/margin_content"
                android:layout_toRightOf="@+id/block"
                android:text="STORE ID" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conten"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_toRightOf="@+id/block"
                android:text="abc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/black"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_block"
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_box"
            android:layout_below="@+id/id_block"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/block1"
                android:layout_width="@dimen/content_box"
                android:layout_height="@dimen/content_box"
                android:background="@android:color/black"
                android:scaleType="centerInside"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginTop="@dimen/margin_content"
                android:layout_toRightOf="@+id/block1"
                android:text="ADDRESS" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/black"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_box"
            android:layout_below="@+id/phone_block"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/block2"
                android:layout_width="@dimen/content_box"
                android:layout_height="@dimen/content_box"
                android:background="@android:color/black"
                android:scaleType="centerInside"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginTop="@dimen/margin_content"
                android:layout_toRightOf="@+id/block2"
                android:text="PHONE" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content2"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_toRightOf="@+id/block2"
                android:text="abc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/black"></View>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
